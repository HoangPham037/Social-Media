<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <TextView
            android:visibility="gone"
            android:fontFamily="@font/jakatavariable"
            android:layout_marginBottom="@dimen/_8dp"
            android:id="@+id/tvSendConversationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="monday"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:background="@drawable/shape_sent_mess"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:fontFamily="@font/jakatavariable"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="This is sent message " />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgSeenState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_state_seen"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_mess_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:textColor="@color/color_gray_02"
                android:textSize="@dimen/_12sp"
                android:fontFamily="@font/jakatavariable"
                tools:text="10:00 AM" />
        </LinearLayout>

    </LinearLayout>
</layout>
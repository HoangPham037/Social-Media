<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg_Noti1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userAvt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avt" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtNotititle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/jakatavariable"
            android:text="heheheheh $hehe ajsdjawbd"
            android:textColor="@color/black"
            android:maxLines="2"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/timenoti1"
            app:layout_constraintStart_toEndOf="@+id/cardview"
            app:layout_constraintTop_toTopOf="@+id/cardview" />


        <TextView
            android:id="@+id/timenoti1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jakatavariable"
            android:text="2h"
            android:textColor="#9395A1"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtNotititle1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfollowback1"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:paddingHorizontal="4dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_follow_btn"
            android:text="follow back"
            android:textAllCaps="false"
            android:textColor="#FFAA05"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/txtNotititle1"
            app:layout_constraintTop_toBottomOf="@+id/txtNotititle1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/blur_effect" />

    <!--<androidx.legacy.widget.Space
        android:id="@+id/spacespeaker1"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>-->

</LinearLayout>
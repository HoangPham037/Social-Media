<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSendConversationDate"
            android:layout_width="wrap_content"
            android:fontFamily="@font/jakatavariable"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_8dp"
            android:visibility="gone"
            tools:text="monday" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_msg"
                android:fontFamily="@font/jakatavariable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="90dp"
                android:background="@drawable/shape_receiver_mess"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:textColor="@color/color_gray_01"
                android:textSize="18sp"
                tools:text="This is received message" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/jakatavariable"
            android:gravity="center"
            android:textColor="@color/color_gray_02"
            android:textSize="@dimen/_12sp"
            tools:text="10:00AM" />

    </LinearLayout>
</layout>
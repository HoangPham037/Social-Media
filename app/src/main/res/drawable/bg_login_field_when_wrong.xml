<!-- border_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border Color -->
    <stroke
        android:width="1dp"
        android:color="#CD1414" />

    <!-- Background Color -->
    <solid android:color="#FFFFFF" /> <!-- Adjust the background color -->

    <!-- Optional: Corner Radius -->
    <corners android:radius="12dp" /> <!-- Adjust the corner radius for rounded corners -->
</shape>
